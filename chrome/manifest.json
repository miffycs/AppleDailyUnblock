{
  "manifest_version": 2,
  "name": "Unblock Appledaily",
  "description": "See the content of Appledaily without paid membership",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://tw.news.appledaily.com/*"],
      "js": ["main.js"]
    }
  ],
  "permissions": [
    "tabs", "https://tw.news.appledaily.com/*"
  ]
}
